#!/bin/bash

# Install Nginx if not already installed
sudo apt-get update
sudo apt-get install nginx -y

# Create custom 404 page with the string "Ceci n'est pas une page"
sudo sh -c 'echo "<html><body><h1>Ceci n'\''est pas une page</h1></body></html>" > /var/www/html/404.html'

# Configure Nginx to use custom 404 page
sudo sh -c 'echo "error_page 404 /404.html;
location = /404.html {
    internal;
}" > /etc/nginx/sites-available/default'

# Restart Nginx to apply changes
sudo systemctl restart nginx
